{
    "builders": [
        {
            "boot_wait": "2s",
            "post_shutdown_delay": "15s",
            "guest_additions_mode": "disable",
            "source_path": "{{user `source_path`}}",
            "shutdown_command": "echo '{{user `username`}}'|sudo -S shutdown -h now",
            "ssh_port": 22,
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "10000s",
            "type": "virtualbox-ovf",
            "skip_export": "true",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--audiocontroller", "hda"],
                ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
                ["modifyvm", "{{.Name}}", "--firmware", "efi"],
                ["modifyvm", "{{.Name}}", "--hpet", "on"],
                ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
                ["modifyvm", "{{.Name}}", "--memory", "4096"],
                ["modifyvm", "{{.Name}}", "--mouse", "usbtablet"],
                ["modifyvm", "{{.Name}}", "--vram", "128"],
                ["modifyvm", "{{.Name}}", "--vram", "128"]
            ]
        }
    ],
    "min_packer_version": "0.7.0",
    "provisioners": [

        {
            "type": "shell-local",
            "command": "sleep {{user `provisioning_delay`}}"
        },

        {
            "type": "shell",
            "inline": [
                "/usr/bin/ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\"",
                "export PATH=\"$PATH:/usr/local/bin\"",
                "brew install --build-bottle fishtown-analytics/dbt/{{user `formula_name`}}",
                "brew bottle --json fishtown-analytics/dbt/{{user `formula_name`}}",
                "brew bottle --merge --write --no-commit {{user `formula_name`}}-{{user `dbt_version_string`}}.{{user `macos_version`}}.bottle.json",
                "brew uninstall --force fishtown-analytics/dbt/{{user `formula_name`}}",
                "brew install {{user `formula_name`}}-{{user `dbt_version_string`}}.{{user `macos_version`}}.bottle{{user `rebuild_string`}}.tar.gz",
                "brew test fishtown-analytics/dbt/{{user `formula_name`}}",
                "echo 'Success!'"
            ]
        },

        {
            "type": "file",
            "source": "/Users/vagrant/{{user `formula_name`}}-{{user `dbt_version_string`}}.{{user `macos_version`}}.bottle{{user `rebuild_string`}}.tar.gz",
            "direction": "download",
            "destination": "build/{{user `formula_name`}}-{{user `dbt_version_string`}}.{{user `macos_version`}}.bottle{{user `rebuild_string`}}.tar.gz"
        },

        {
            "type": "file",
            "source": "/Users/vagrant/{{user `formula_name`}}-{{user `dbt_version_string`}}.{{user `macos_version`}}.bottle.json",
            "direction": "download",
            "destination": "build/{{user `formula_name`}}-{{user `dbt_version_string`}}.{{user `macos_version`}}.bottle.json"
        }

    ],

    "variables": {
        "username": "vagrant",
        "password": "vagrant",
        "provisioning_delay": "0",
        "formula_name": "dbt@0.8.3",
        "dbt_version_string": "0.8.3",
        "rebuild_string": "",
        "macos_version": "el_capitan"
    }
}
